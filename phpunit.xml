            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="AckfSECXIvnK5r28GVIWUAxmbBSjTsmF"/>
        <env name="DB_DATABASE" value="ecommerce_test"/>
        <env name="DB_USERNAME" value="test_user"/>
        <env name="DB_PASSWORD" value="passw0rd"/>
    </php>

    <logging>
        <log
            type="coverage-html"
            target="../../public/cov/framework"
            lowUpperBound="50"
            highLowerBound="80"
        ></log>
    </logging>
</phpunit>
